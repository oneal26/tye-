<p id="notice"><%= notice %></p>

<h1>Class Cals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_cals.each do |class_cal| %>
      <tr>
        <td><%= class_cal.name %></td>
        <td><%= class_cal.start_time %></td>
        <td><%= class_cal.end_time %></td>
        <td><%= link_to 'Show', class_cal %></td>
        <td><%= link_to 'Edit', edit_class_cal_path(class_cal) %></td>
        <td><%= link_to 'Destroy', class_cal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

